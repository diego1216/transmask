extends layout 

block content
  .contenedor__todo
    .caja
      .caja_register
        h3 ¿Aún no tienes una cuenta?
        p Regístrate para que puedas iniciar sesión
        a#btn__registrarse(href="/register") Regístrarse
    .contenedor__login-register
      form.formulario__login(action="", method="POST")
        h2 Iniciar Sesión
        input(type="text", placeholder="Correo Electronico")
        input(type="password", placeholder="Contraseña")
        button(type="submit") Entrar
